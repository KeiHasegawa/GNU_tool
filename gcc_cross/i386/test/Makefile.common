%.o : %.S
	i386-elf-as -o $@ -g $<

%.o : %.c
	i386-elf-gcc -o $@ $< -c -g

%.elf : %.o 
	i386-elf-ld -o $@ ../default.o $< -T ../default.x

%.objdump : %.elf
	i386-elf-objdump -x -d -g $< > $@

%.objcopy : %.elf
	i386-elf-objcopy -O binary -S $< $@ --pad-to=0x10000

%.log : %.elf
	wdog.exe -v i386-elf-gdb -q -x gdbcom $< > $@

%.lof : %.log
	wdog.exe -v diff $< $@
	touch $@

clean:
	rm -f *.o *.s *.elf *.map *.objdump *.objcopy *.log TAGS *~
