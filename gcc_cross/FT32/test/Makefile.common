%.o : %.S
	ft32-elf-as -o $@ $< -g --no-relax

%.o : %.c
	ft32-elf-gcc -o $@ $< -c -g

LIBGCC = /media/ca850f52-0605-42a7-9fd4-899de9edf461/work/GNU_LANG/lib/gcc/ft32-elf/10.2.0/libgcc.a

%.elf : %.o
	ft32-elf-ld -o $@ ../default.o $< $(LIBGCC) -T ../default.x

%.objdump : %.elf
	ft32-elf-objdump -x -d -g $< > $@

%.log : %.elf
	wdog.exe -v ft32-elf-gdb -q -x gdbcom $< > $@

%.lof : %.log
	wdog.exe -v diff $< $@
	touch $@

clean:
	rm -f *.s *.o *.elf *.objdump *.log *.a *.map *~

