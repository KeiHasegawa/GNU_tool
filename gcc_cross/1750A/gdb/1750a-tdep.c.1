static const char* m1750a_register_name(gdbarch*, int regno)
{
  if (regno == pc_regno)
    return "pc";
  
  if (regno == sp_regno)
    return "sp";
  
  if (regno < 16) {
    static const char* name[] = {
      "r0", "r1", "r2", "r3", "r4", "r5", "r6", "r7",
      "r8", "r9", "r10", "r11", "r12", "r13", "r14", "r15"};
    return name[regno];
  }
 
  return nullptr;
}

