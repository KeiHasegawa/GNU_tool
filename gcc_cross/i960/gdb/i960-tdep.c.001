static struct gdbarch*
i960_gdbarch_init(struct gdbarch_info info, struct gdbarch_list *arches)
{
  struct gdbarch *gdbarch = gdbarch_alloc (&info, 0);

  set_gdbarch_num_regs(gdbarch, pc_regno+1);
  set_gdbarch_register_type(gdbarch, i960_register_type);
  set_gdbarch_register_sim_regno(gdbarch, i960_register_sim_regno);
  set_gdbarch_dwarf2_reg_to_regnum(gdbarch, i960_dbg_reg_to_regnum);
  set_gdbarch_stab_reg_to_regnum(gdbarch, i960_dbg_reg_to_regnum);
  set_gdbarch_register_name(gdbarch, i960_register_name);

  set_gdbarch_pc_regnum(gdbarch, pc_regno);
  set_gdbarch_sp_regnum(gdbarch, sp_regno);
  set_gdbarch_print_registers_info(gdbarch, i960_print_registers_info);

  set_gdbarch_ptr_bit(gdbarch, 4 * TARGET_CHAR_BIT);
  set_gdbarch_addr_bit(gdbarch, 4 * TARGET_CHAR_BIT);
  set_gdbarch_return_value(gdbarch, i960_return_value);

  set_gdbarch_skip_prologue (gdbarch, i960_skip_prologue);
  frame_base_set_default (gdbarch, &i960_frame_base);
  dwarf2_append_unwinders(gdbarch);
  frame_unwind_append_unwinder(gdbarch, &i960_frame_unwind);

  set_gdbarch_inner_than (gdbarch, core_addr_lessthan);
  set_gdbarch_breakpoint_kind_from_pc(gdbarch, i960_kind_from_pc);
  set_gdbarch_sw_breakpoint_from_kind(gdbarch, i960_from_kind);
  set_gdbarch_push_dummy_call(gdbarch, i960_push_dummy_call);

  set_gdbarch_char_signed(gdbarch, 0);
  set_gdbarch_int_bit(gdbarch, 4 * TARGET_CHAR_BIT);
  set_gdbarch_long_bit(gdbarch, 4 * TARGET_CHAR_BIT);
  set_gdbarch_long_long_bit (gdbarch, 8 * TARGET_CHAR_BIT);

  set_gdbarch_wchar_signed(gdbarch, 0);
  set_gdbarch_wchar_bit(gdbarch, 2 * TARGET_CHAR_BIT);

  set_gdbarch_double_bit(gdbarch, 8 * TARGET_CHAR_BIT);
  set_gdbarch_double_format(gdbarch, floatformats_ieee_double);
  set_gdbarch_long_double_bit(gdbarch, 8 * TARGET_CHAR_BIT);
  set_gdbarch_long_double_format(gdbarch, floatformats_ieee_double);

  set_gdbarch_believe_pcc_promotion(gdbarch, 1);
 
  return gdbarch;
}

